@model RoleTop.ViewModels.OrcamentoViewModel
<main>
        <h2>Faça seu Orçamento! @Model.NomeUsuario</h2>
        <form method="POST" action='@Url.Action("Registrar","Orcamento")'>
                    <div>
                        <label for="nome">Nome Completo</label>
                        <br />
                        <input id="nome" type="nome" maxlength="20" minlength="3" value="@Model.Cliente.Nome" name="nome" required/>
                    </div>
        
                    <div>
                        <label for="endereco">Endereço</label>
                        <br />
                        <input id="endereco" type="endereco" maxlength="20" minlength="3" value="@Model.Cliente.Endereco" name="endereco" />
                    </div>

                    <div>
                        <label for="telefone">Telefone para contato</label>
                        <br />
                        <input id="telefone" type="telefone" value="@Model.Cliente.Telefone" name="telefone"/>
                    </div>
        
                    <div>
                        <label for="email">E-mail</label>
                        <br />
                        <input id="email" type="email" value="@Model.Cliente.Email" name="email" required/>
                    </div>

                    <div>
                        <label for="cpf">CPF</label>
                        <br />
                        <input id="cpf" type="cpf" name="cpf" placeholder="123.456.789-56" value="@Model.Cliente.Cpf" required/>
                    
                    <div class="double-field">
                        <label for="data_evento">Data do Evento:</label>
                        <input id="evento_evento" type="date" name="data_evento" required><br><br>
                    </div>


                    <div class="double-field">
                        <div>
                            <label for="evento">Evento</label>
                            <select id="evento" name="evento" required>
                                <option value= "" disabled selected>Selecione</option>
                                @foreach (var evento in Model.Eventos)
                                {
                                    <option value=@evento.Nome>@evento.Nome por @evento.Preco</option>
                                }
                            </select>
                            </div>
                        <div>
                            <label for="pacoteServicos">Pacote Serviços</label>
                            <select id="pacoteServicos" name="pacoteServicos" required>
                                <option value= "" disabled selected>Selecione</option>
                                @foreach (var p in Model.PacotesServicos)
                                {
                                    <option value=@p.Nome>@p.Nome por @p.Preco</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                    <div>
                        <label for="tipo_evento">Tipo de Evento</label>
                            <select id="tipo_evento" name="tipo_evento" required>
                                <option value="" disabled selected>Selecione</option>
                                <option>Publico</option>
                                <option>Fechado</option>
                            </select>
                    </div>

                    <div>
                        <label for="forma_pagamento">Forma de Pagamento</label>
                            <select id="forma_pagamento" name="forma_pagamento" required>
                                <option value="" disabled selected>Selecione</option>
                                <option >Cartão de Credito</option>
                                <option >Boleto</option>
                            </select>
                    </div>


                    <p>Após a confirmação do pagamento, analisaremos o Orçamento, caso seja recusado o valor será estornado.</p>
                    <input type="submit" value="Finalizar Orçamento!" />
                </form>
        
            </main>