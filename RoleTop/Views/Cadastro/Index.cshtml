        <main>
        <h2>Cadastro</h2>
                <form method="POST" action='@Url.Action("CadastrarCliente", "Cadastro")'>
                    <div>
                        <label for="nome">Nome Completo</label>
                        <br />
                        <input id="nome" type="text" maxlength="20" minlength="3" name="nome" placeholder="João Paulo"/>
                    </div>
        
                    <div>
                        <label for="email">E-mail</label>
                        <br />
                        <input id="email" type="email" maxlength="40" minlength="5" name="email" placeholder="example@email.com"/>
                    </div>

                    <div>
                        <label for="endereco">Endereço</label>
                        <br />
                        <input id="endereco" type="text" maxlength="20" minlength="3" name="endereco" placeholder="Avenida de Limeira, 539 - Campos Elíseos - SP"/>
                    </div>
        
                    <div>
                        <label for="telefone">Telefone para contato</label>
                        <br />
                        <input id="telefone" type="number" maxlength="20" minlength="3" name="telefone" placeholder="11 12345 6789"/>
                    </div>

                    <div>
                    <label for="data-nascimento">Data de Nascimento</label>
                    <br />
                    <input id="data-nascimento" type="date" maxlength="20" minlength="3" name="data-nascimento" placeholder="00/00/0000/">
                    </div>

                    <div>
                        <label for="cpf/cnpj">CPF/CNPJ</label>
                        <br />
                        <input id="cpf/cnpj" type="cpf" name="cpf/cnpj" placeholder="123.456.789-56"/>
                    </div>

                    <div>
                        <label for="senha">Senha</label>
                        <br />
                        <input id="senha" type="password" maxlength="20" minlength="6" name="senha" placeholder="********"/>
                    </div>

                    <div>
                        <label for="confirmar-senha">Confirmar Senha</label>
                        <br />
                        <input id="confirmar-senha" type="password" maxlength="20" minlength="6" name="confirmar-senha" />
                    </div>
        <input type="submit" value="Finalizar cadastro" />
            </form>
</main>